          <a href="#"><i class="fa fa-twitter"></i></a>
          <a href="#"><i class="fa fa-linkedin"></i></a>
        </div>
      </div>
      <div class="mi-text">
        <h5><%= speakers[i].name %></h5>
        <span>Speaker</span>
      </div>
    </div>
    <%}%>
  </div>
</section>
<!-- Team Member Section End -->

