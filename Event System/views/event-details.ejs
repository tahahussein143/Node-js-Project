<!-- Counter Section Begin -->
<section class="counter-section bg-gradient">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="counter-text">
          <span>Conference Date</span>
          <h3><%= event.title %></h3>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="cd-timer" id="countdown">
          <div class="cd-item">
            <span>40</span>
            <p>Days</p>
          </div>
          <div class="cd-item">
            <span>18</span>
            <p>Hours</p>
          </div>
          <div class="cd-item">
            <span>46</span>
            <p>Minutes</p>
          </div>
          <div class="cd-item">
            <span>32</span>
            <p>Seconds</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Counter Section End -->

<!-- Home About Section Begin -->
<section class="home-about-section spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="ha-pic">
          <img class="img-event" src="img/h-about.jpg" alt="" />
        </div>
      </div>
      <div class="col-lg-6">
        <div class="ha-text">
          <h2>About Conference</h2>
          <p><%= event.description %></p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Home About Section End -->

<!-- Team Member Section Begin -->
<section class="team-member-section">
