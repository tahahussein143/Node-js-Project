<!-- Blog Section Begin -->
<section class="blog-section spad">
  <div class="container d-flex">
    <% for (let i=0; i < events.length; i++) {%>
    <div class="col-lg-6">
      <div class="blog-item set-bg large-item" data-setbg="img/blog/blog-<%= events[i].id  %>.jpg">
        <div class="bi-tag bg-gradient">
          <a href="http://localhost:3000/event/<%=events[i].id %>">Details</a>
        </div>
        <div class="bi-text">
          <h3>
            <a href="http://localhost:3000/event/<%=events[i].id%>">
              <%= events[i].title %>
            </a>
          </h3>
          <span>
            <i class="fa fa-clock-o"></i>  <%= events[i].date.toLocaleDateString('en-US',{ weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
          </span>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</section>
<!-- Blog Section End -->
